<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf> 
	
    <globals background="0 0 0 1" ambient="0 0 0 1" /> 

    <fog color="1.0 1.0 1.0 1.0" near="0.0" far="10000.0" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0 0.0 0" /> 

        <orthogonal id="cam2" 
            near="0.1" 
            far="1000" 
            location="0 15 15" 
            target="0.0 15 0.0" 
            left="-5" 
            right="5" 
            bottom="-5" 
            top="5" /> 
    </cameras> 

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas texturas --> 
    <textures>        
		<texture id="floorTex" filepath="scenes/textures/football_pitch.avif" />
        <texture id="ballTex" filepath="scenes/textures/ball.jpg" />
        <texture id="metalTex" filepath="scenes/textures/metal.jpeg" />
        <texture id="grassTex" filepath="scenes/textures/grass.jpg" />
        <texture id="grassBumpTex" filepath="scenes/textures/grass_bump.png" />
        <texture id="goalVideoTex" isVideo="true" filepath="scenes/textures/videos/goalVideo.mp4"/>
    </textures> 

    <skybox size="250 250 250" center="100 100 0" emissive="1.0 1.0 1.0 1.0" intensity="1.0" up="./scenes/textures/sky.png" down="./scenes/textures/sky.png" left="./scenes/textures/sky.png" right="./scenes/textures/sky.png" front="./scenes/textures/sky.png" back="./scenes/textures/sky.png"/>

    <materials> 
		
		<material id="floorApp" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="floorTex" 
            texlength_s="1" 
            texlength_t="1" 
            twosided = "true" />
			
		<material id="tapeSupportApp" 
            emissive="0 0 0 1" 
            color="1 1 1 1.0"  
            specular="0 0 0 1" 
            shininess="0" 
            textureref="tapeSupportTex" 
            texlength_s="1" 
            texlength_t="1" />

        <material id="ballApp" 
            emissive="0.0 0.0 0.0 1" 
            color="1 1 1 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="ballTex" 
            texlength_s="1" 
            texlength_t="1" 
            twosided = "true" />

            <material id="metalApp" 
            emissive="0 0 0 1" 
            color="1 1 1 1.0"  
            specular="0 0 0 1" 
            shininess="0" 
            textureref="metalTex" 
            texlength_s="1" 
            texlength_t="1"
            twosided = "true" />

            <material id="grassApp" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0" 
            specular="0 0 0 0" 
            shininess="0" 
            textureref="grassTex" 
            texlength_s="1" 
            texlength_t="1" 
            twosided = "true"
            bumpref = "grassBumpTex"
            bumpscale = "0.5" />

            <material id="goalVideoApp" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0" 
            specular="0 0 0 0" 
            shininess="0" 
            textureref="goalVideoTex" 
            texlength_s="1" 
            texlength_t="1" 
            twosided = "false" />
			
    </materials> 

    <graph rootid="scene"> 

		<lod id="demo" near="0" far="1000" > 
            <noderef id="ball" mindist="20"/>
        </lod>

		<node id="scene"> 
            <children> 
				<noderef id="floor" /> 
                <noderef id="goal" /> 
                <noderef id="goal1" /> 
                <noderef id="ball" /> 
                <noderef id="lightSystem" /> 
            

                <pointlight id="light1" enabled="true" 
                    color="0.5 0.6 1 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="33.75 37.3 33.75" 
                /> 

                <pointlight id="light2" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="11.25 7.3 3.75"
                /> 
                
                <pointlight id="light3" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="11.25 7.3 3.75"  
                /> 
			              
                <spotlight id="light4" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="true"
                    position="2 2 4" 
                    target="0 0 0"
                    penumbra="1.0"
                    angle="10.0" 
                /> 

                <directionallight id="light5" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    castshadow="true"
                    position="2 2 4" 
                /> 
            </children> 
        </node>

        <node id="ball">
			<transforms>
                <rotate value3="135 0.0 0.0" />    
				<translate value3="25 -0.5 -0.8" />
            </transforms> 

			<materialref id="ballApp" />
			
            <children>             
                <primitive>
                    <sphere radius="1" slices="32" stacks="16" phistart="0" philength="360" thetastart="0" thetalength="180" />
                </primitive>
            </children> 
        </node>

        <node id="lightning">
            <transforms>
                <rotate value3="-60 0.0 0.0" />    
            </transforms> 

            <children>             
                <primitive>
                    <polygon radius="0.2" slices="32" stacks="32" color_c="1 1 1 1" color_p="1 1 0 1" />
                </primitive>
            </children> 
        </node>
		
        <node id="support">
            <children>             
                <primitive>
                    <cylinder base="0.1" top="0.1" height="1.3" slices="32" stacks="32" />
                </primitive>
            </children> 
        </node>

        <node id="support_horizontal">
            <children>             
                <primitive>
                    <cylinder base="0.1" top="0.1" height="3.1" slices="32" stacks="32" />
                </primitive>
            </children> 
        </node>

        <node id="post">
            <children>             
                <primitive>
                    <cylinder base="0.3" top="0.3" height="10" slices="32" stacks="32" />
                </primitive>
            </children> 
        </node>

        <node id="post_horizontal">
            <children>             
                <primitive>
                    <cylinder base="0.2" top="0.2" height="4" slices="32" stacks="32" />
