        <node id="support1">
			<transforms>
                <rotate value3="90 0.0 0.0" />    
				<translate value3="-1.25 -0.15 2.7" />
            </transforms> 

            <children>             
                <noderef id="support" />
            </children> 
        </node>

        <node id="support2">
			<transforms>
				<rotate value3="90 0.0 0.0" />    
				<translate value3="-1.25 -0.15 5.7" />
            </transforms> 

            <children>             
                <noderef id="support" />
            </children> 
        </node>

        <node id="support3">
			<transforms>  
				<translate value3="-1.25 -4.2 -0.8" />
            </transforms> 

            <children>             
                <noderef id="support_horizontal" />
            </children> 
        </node>

        <node id="post1">
			<transforms>
                <rotate value3="90 0.0 0.0" />    
