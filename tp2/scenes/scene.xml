<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf> 

	<!-- Credits of the original file go to Group 1, class 1 of course LAIG school year 2013/2014, FEUP, University of Porto -->
	
    <globals background="0 0 0 1" ambient="0 0 0 1" /> 

    <fog color="1.0 1.0 1.0 1.0" near="0.0" far="1000.0" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0 0.0 0" /> 

        <orthogonal id="cam2" 
            near="0.1" 
            far="1000" 
            location="0 15 15" 
            target="0.0 15 0.0" 
            left="-5" 
            right="5" 
            bottom="-5" 
            top="5" /> 
    </cameras> 

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas texturas --> 
    <textures>        
		<texture id="floorTex" filepath="scenes/textures/football_pitch.avif" />
        <texture id="ballTex" filepath="scenes/textures/ball.jpg" />
    </textures> 

    <skybox size="150 150 150" center="0 0 0" emissive="1.0 1.0 1.0 1.0" intensity="1.0" up="./scenes/demo/textures/pine.jpg" down="./scenes/demo/textures/pine.jpg" left="./scenes/demo/textures/pine.jpg" right="./scenes/demo/textures/pine.jpg" front="./scenes/demo/textures/pine.jpg" back="./scenes/demo/textures/pine.jpg"/>

    <materials> 
		
		<material id="floorApp" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="floorTex" 
            texlength_s="1" 
            texlength_t="1" 
            twosided = "true" />
			
		<material id="tapeSupportApp" 
            emissive="0 0 0 1" 
            color="1 1 1 1.0"  
            specular="0 0 0 1" 
            shininess="0" 
            textureref="tapeSupportTex" 
            texlength_s="1" 
            texlength_t="1" />

        <material id="ballApp" 
            emissive="0.0 0.0 0.0 1" 
            color="1 1 1 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="ballTex" 
            texlength_s="1" 
            texlength_t="1" 
            twosided = "true" />
			
    </materials> 

    <graph rootid="scene"> 
		
		<node id="scene"> 
            <children> 
				<noderef id="floor" /> 
                <noderef id="goal" /> 
                <noderef id="goal1" /> 
                <noderef id="ball" /> 


                <pointlight id="light1" enabled="true" 
                    color="0.5 0.6 1 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="33.75 37.3 33.75" 
                /> 

                <pointlight id="light2" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="11.25 7.3 3.75"
                /> 
                
                <pointlight id="light3" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="11.25 7.3 3.75"  
                /> 
			              
                <spotlight id="light4" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="true"
                    position="2 2 4" 
                    target="0 0 0"
                    penumbra="1.0"
                    angle="10.0" 
                /> 

                <directionallight id="light5" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    castshadow="true"
                    position="2 2 4" 
                /> 
            </children> 
        </node>

        <node id="ball">
			<transforms>
                <rotate value3="135 0.0 0.0" />    
				<translate value3="25 -0.5 -0.8" />
            </transforms> 

			<materialref id="ballApp" />
			
            <children>             
                <primitive>
                    <sphere radius="1" slices="32" stacks="16" phistart="0" philength="360" thetastart="0" thetalength="180" />
                </primitive>
            </children> 
        </node>
		
        <node id="support">
            <children>             
                <primitive>
                    <cylinder base="0.1" top="0.1" height="1.3" slices="32" stacks="32" />
                </primitive>
            </children> 
        </node>

        <node id="support_horizontal">
            <children>             
                <primitive>
                    <cylinder base="0.1" top="0.1" height="3.1" slices="32" stacks="32" />
                </primitive>
            </children> 
        </node>

        <node id="support1">
			<transforms>
                <rotate value3="90 0.0 0.0" />    
				<translate value3="-1.25 -0.15 2.7" />
            </transforms> 

            <children>             
                <noderef id="support" />
            </children> 
        </node>

        <node id="support2">
			<transforms>
				<rotate value3="90 0.0 0.0" />    
				<translate value3="-1.25 -0.15 5.7" />
            </transforms> 

            <children>             
                <noderef id="support" />
            </children> 
        </node>

        <node id="support3">
			<transforms>  
				<translate value3="-1.25 -4.2 -0.8" />
            </transforms> 

            <children>             
                <noderef id="support_horizontal" />
            </children> 
        </node>

        <node id="goal">
			<transforms>
				<translate value3="7.5 0 10" />
				<translate value3="0 1.5 0" />
				<rotate value3="89.5 0.0 0.0" />
				<scale value3="4.5 2.5 3" />
				<translate value3="0 0.5 0" />
            </transforms> 

			<materialref id="tapeSupportApp" />
			
            <children>             
                <noderef id="support1" />
				<noderef id="support2" />
				<noderef id="support3" />
            </children> 
        </node>

        <node id="goal1">
			<transforms>
				<translate value3="53.7 0 10" />
				<translate value3="0 1.5 0" />
				<rotate value3="89.5 0.0 0.0" />
				<scale value3="4.5 2.5 3" />
				<translate value3="0 0.5 0" />
            </transforms> 

			<materialref id="tapeSupportApp" />
			
            <children>             
                <noderef id="support1" />
				<noderef id="support2" />
				<noderef id="support3" />
            </children> 
        </node>
		
		<node id="floor">
			<transforms>
				<translate value3="0 0 15" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

			<materialref id="floorApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="50 30" />
                </primitive>
            </children> 
        </node>
		
    </graph> 
</yaf> 